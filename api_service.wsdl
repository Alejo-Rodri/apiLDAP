        <wsdl:operation name="authenticate">
            <soap:operation soapAction="urn:ApiService#authenticate"/>
            <wsdl:input>
                <soap:body use="encoded" namespace="urn:ApiService" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"/>
