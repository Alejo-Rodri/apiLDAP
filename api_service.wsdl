    <wsdl:message name="authenticateRequest">
        <wsdl:part name="uid" type="xsd:string"/>
        <wsdl:part name="psswd" type="xsd:string"/>
    </wsdl:message>

    <wsdl:message name="authenticateResponse">
        <wsdl:part name="status" type="xsd:string"/>
